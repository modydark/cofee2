<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ss3"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.mohamed.cofee.MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="Mody cafee"
        android:textColor="@android:color/background_light"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="TOPPINGS"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/ordersummary"
        android:layout_toEndOf="@+id/ordersummary" />

    <CheckBox
        android:id="@+id/whippedcream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="whipped cream"
        android:textColor="@android:color/white"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <CheckBox
        android:id="@+id/chocolate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="chocolate"
        android:textColor="@android:color/white"
        android:layout_below="@+id/whippedcream"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:layout_below="@+id/chocolate"
        android:layout_alignLeft="@+id/chocolate"
        android:layout_alignStart="@+id/chocolate" />

    <Button
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="mins"
        android:text="-"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/min"
        android:layout_alignBottom="@+id/min"
        android:layout_toLeftOf="@+id/plu"
        android:layout_toStartOf="@+id/plu"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="16dp" />

    <Button
        android:id="@+id/plu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quantity"
        android:layout_alignBottom="@+id/quantity"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/whippedcream"
        android:layout_toRightOf="@+id/whippedcream"
        android:onClick="plus"
        android:text="+" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="ORDER SUMMARY"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:layout_below="@+id/min"
        android:layout_alignLeft="@+id/min"
        android:layout_alignStart="@+id/min" />

    <TextView
        android:id="@+id/ordersummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="$0"
        android:textColor="@android:color/white"
        android:textSize="16dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:id="@+id/orderbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/min"
        android:layout_alignRight="@+id/min"
        android:layout_below="@+id/ordersummary"
        android:layout_marginTop="27dp"
        android:onClick="txtshow2"
        android:text="ORDER" />

</RelativeLayout>
